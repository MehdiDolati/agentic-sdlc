{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend Only",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "services.api.app:app",
        "--reload",
        "--host",
        "0.0.0.0",
        "--port",
        "8000"
      ],
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Frontend Only",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}/agentic-sdlc-craft/src",
      "preLaunchTask": "Run Frontend",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/*"
      }
    },
    {
      "name": "Backend + Frontend (Debug Both)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "services.api.app:app",
        "--reload",
        "--host",
        "0.0.0.0",
        "--port",
        "8000"
      ],
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/agentic-sdlc",
      "preLaunchTask": "Run Frontend",
      "postDebugTask": "Stop Frontend"
    }
  ],
  "compounds": [
    {
      "name": "Backend + Frontend",
      "configurations": ["Backend Only", "Frontend Only"],
      "stopAll": true
    }
  ]
}